[core]
    autocrlf = input
    editor = nvim
[color]
    ui = auto
[init]
    defaultBranch = main
[commit]
    gpgSign = true
    verbose = true
[gpg]
    format = openpgp
[push]
    default = nothing
    gpgSign = if-asked
[user]
    useConfigOnly = true
[diff]
    algorithm = histogram
    tool = nvimdiff
[merge]
    conflictStyle = zdiff3
    tool = nvimdiff
[rerere]
    enabled = true
    autoUpdate = true
[column]
    ui = auto
[branch]
    sort = -committerdate
[alias]
    force-push = push --force-with-lease
    log-graph = log --graph --oneline --color
    root = rev-parse --show-toplevel
    search = log -E -i --grep
    stash-all = stash --all
