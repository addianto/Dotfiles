[core]
    autocrlf = input
    editor = nvim
[color]
    ui = auto
[init]
    defaultBranch = main
[commit]
    gpgSign = true
[gpg]
    format = openpgp
[push]
    default = nothing
    gpgSign = true
[user]
    useConfigOnly = true
[diff]
    tool = nvimdiff
[merge]
    tool = nvimdiff
[rerere]
    enabled = true
    autoUpdate = true
[column]
    ui = auto
[branch]
    sort = -committerdate
[alias]
